{
    "name": "avzer/email",
    "type": "library",
    "description": "Library to send e-mails over different transports and protocols (like SMTP and IMAP) using immutable messages and streams. Also includes SMTP server.",
    "license": "MIT",
    "homepage": "https://github.com/genkgo/mail",
    "support": {
        "issues": "https://github.com/genkgo/mail/issues"
    },
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-phpunit": "^0.9",
        "friendsofphp/php-cs-fixer": "^2.9",
        "predis/predis": "^1.0",
        "psr/log": "^1.0",
        "ext-openssl": "*"
    },
    "suggest": {
        "predis/predis": "Use redis to queue messages",
        "ext-openssl": "Sign your messages with DKIM"
    },
    "autoload": {
        "psr-4": {
            "Genkgo\\Mail\\": ["src"]
        }
    }
}
